PROC D_COMMON_SHAPE_STATUS(REAL ANG_1,REAL ANG_2,REAL RND_VALUE,VAR REAL STATUS_CACU,VAR REAL STATUS_VER,VAR REAL LENGTH) DISPLOF
;;**********程序功能**********
;;
;;***************************

IF ANG_1>ANG_2
    LENGTH=RND_VALUE/TAN((180-ANG_1+ANG_2)/2)
    STATUS_CACU=1
ELSE
    LENGTH=RND_VALUE/TAN((180+ANG_1-ANG_2)/2)
    STATUS_CACU=-1
ENDIF

IF ANG_1>90
    STATUS_VER=-1
ELSE
    STATUS_VER=1
ENDIF

RET

