PROC M_OPERATION DISPLON
;;**********程序功能**********
;;对刀主程序:
;;首次对刀 二次对刀 自动对刀 角度计算 等子程序的调用
;;***************************

EXTERN S_GRINDWHEEL_RUN(REAL)

S_GRINDWHEEL_RUN(INI[53])

IF TOOL_SET[8]==0;首次对刀
    IF GRIND[2]==1;手动对刀
        S_OPERATION_JOG;手动对刀程序
    ELSE
        S_OPERATION_AUTO;自动对刀程序
    ENDIF
ELSE;二次对刀
    S_OPERATION_RAND;二次对刀子程序
ENDIF

IF (DRESSER[6]<>0) OR ($A_DBB[2]==1);有报警/按下退刀键则退出程序
    RET
ENDIF

PLCASUP1;跳转到初始角度计算子程序
S_EXITWORK;退出工件范围

RET

