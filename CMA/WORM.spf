PROC WORM DISPLON																							
;;**********程序功能**********
;;外螺纹主程序:
;;修整 对刀 磨削 程序的调用
;;***************************
WHEEL[10]=R7;
WHEEL[12]=R15+DRESSER[23]/2+R29;根据砂轮中心的V坐标计算初始接触位置
DRESSER[24]=R9
S_PAR_INI;参数初始化子程序
IF (DRESSER[6]==1)OR(DRESSER[6]==2)OR(DRESSER[6]==3);有报警标记则退出程序
    GOTOF G_ENDING
ENDIF
S_PARA_TRANS;参数传递

IF GRIND[1]<>0
    DRESS;修整
    PROCESS[13]=PROCESS[13]-(R25-2)*R20-R21;初始进刀位置计算
    PROCESS[4]=PROCESS[4]-(R25-2)*R20-R21;当前进刀位置计算
    INI[40]=0;新砂轮磨削接触位计算标记
    GOTOF G_ENDING
ENDIF

S_ROTATE_ANGLE;螺旋升角

IF GRIND[2]<>0
    ;M20;吸雾开
    ;M8;磨削冷却开
    OPERATION;对刀
    IF (DRESSER[6]==4) OR (DRESSER[6]==5) OR (DRESSER[6]==6) OR (DRESSER[6]==7);自动对刀过程中有报警
        GOTOF G_ENDING
    ENDIF
    IF GRIND[2]<>2;不是纯自动对刀(只计算C角度)
        GOTOF G_ENDING
    ENDIF
ENDIF

;使用界面参数还是DIY参数
IF PROCESS[0]==0;选择界面工艺
    DIY[1]=0;DIY磨削次数
    IF TECHNOLOGY[10]+TECHNOLOGY[11]+TECHNOLOGY[12]+TECHNOLOGY[13]==0;工艺参数中设置的总磨削次数
        RET
    ENDIF
ELSE;选择DIY工艺
    PROCESS[2]=4;当前工艺切换到DIY
    IF DIY[1]==0
        RET
    ENDIF
ENDIF
;-------------------------------------------------------
STOPRE
TOOL_SET[8]=1;改为二次对刀
GRIND[2]=0;不对刀
WHILE(TECH_TIME[0]+TECH_TIME[1]+TECH_TIME[2]+TECH_TIME[3]+TECH_TIME[4]<=TECHNOLOGY[10]+TECHNOLOGY[11]+TECHNOLOGY[12]+TECHNOLOGY[13]+DIY[1])
    STOPRE
    S_CYCLE_SW;外螺纹磨削循环
    S_PARA_TRANS;
    IF (DRESSER[6]==1)OR(DRESSER[6]==2);有报警
        GOTOF G_ENDING
    ENDIF
    IF $A_DBB[2]==1;按下退刀键跳转到结束程序
        GOTOF G_ENDING
    ENDIF
    S_BCYC;工序进给大循环判断
    S_LINESPEED_GRIND;磨削时砂轮速度调节子程序
    IF (TECH_TIME[0]+TECH_TIME[1]+TECH_TIME[2]+TECH_TIME[3]+TECH_TIME[4]<=TECHNOLOGY[10]+TECHNOLOGY[11]+TECHNOLOGY[12]+TECHNOLOGY[13]+DIY[1]);循环未结束
        M20;吸雾开
        M8;磨削冷却开
    ENDIF
ENDWHILE
;-------------------------------------------------------
G_ENDING:

S_GRINDING_END;运行结束
S_ALARM;机床报警

RET

